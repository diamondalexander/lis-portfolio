<div class="col">
  <div class="card h-100">
    <a href="{{ project.url }}"><img class="card-img-top project-card-image" src="{{ project.data.projectImage }}" alt="decorative image"></a>
    <div class="card-body p-4 pb-3">
      <a href="{{ project.url }}"><h5 class="card-title">{{ project.data.title }}</h5></a>
      <p class="card-text">{{ project.data.description }}</p>
    </div>
    <div class="card-footer ps-4 mt-2"><a href="{{ project.url }}" title="link to {{ project.data.title }} project page">Explore the project</a></div>
</div>
</div>